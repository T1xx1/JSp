{
	"$schema": "http://json-schema.org/draft/2020-12/schema",
	"title": "JS+ configuration",
	"type": "object",
	"required": ["$schema"],
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"description": "JSON $schema",
			"default": "https://raw.githubusercontent.com/t1xx1/jsp/refs/heads/main/packages/jsp/src/config/%24schema.json"
		},
		"include": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"description": "List of glob patterns that match JS+ files to be parsed. Defaults to ['./**']",
			"default": ["./**"]
		},
		"exclude": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"description": "List of glob patterns to exclude for the include property",
			"default": []
		},
		"compiler": {
			"type": "object",
			"description": "JS+ compiler options",
			"additionalProperties": false,
			"properties": {
				"emitLang": {
					"type": "string",
					"enum": ["JavaScript", "TypeScript"],
					"description": "Language to compile JS+ into. Defaults to 'JavaScript'",
					"default": "TypeScript"
				},
				"emitDir": {
					"type": "string",
					"description": "Output directory. Defaults to './dist'",
					"default": "./dist"
				}
			}
		}
	}
}
