{
	"$schema": "http://json-schema.org/draft/2020-12/schema",
	"title": "JS+ configuration",
	"type": "object",
	"required": ["$schema"],
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"description": "JSON $schema. Defaults to './node_modules/@jsplang/jsp/$schema.json'",
			"default": "./node_modules/@jsplang/jsp/$schema.json"
		},
		"rootDir": {
			"type": "string",
			"description": "Root directory of your program. Defaults to './src'",
			"default": "./src"
		},
		"include": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"description": "List of glob patterns to include in your program. Defaults to ['./**']",
			"default": ["./**"]
		},
		"exclude": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"description": "List of glob patterns to exclude when resolving `include`. Defaults to []",
			"default": []
		},
		"compiler": {
			"type": "object",
			"description": "Configuration for the compilation process",
			"additionalProperties": false,
			"properties": {
				"emitEnabled": {
					"type": "boolean",
					"description": "Enable file emitting. Defaults to `true`",
					"default": true
				},
				"emitDir": {
					"type": "string",
					"description": "Directory to compile JS+ into. Defaults to './dist'",
					"default": "./dist"
				},
				"emitLang": {
					"type": "string",
					"enum": ["JavaScript", "TypeScript"],
					"description": "Language to compile JS+ into. Defaults to 'JavaScript'",
					"default": "TypeScript"
				},
				"emitSourceMaps": {
					"type": "boolean",
					"description": "Emit source maps in the `emitDir`. Defaults to false",
					"default": false
				}
			}
		}
	}
}
