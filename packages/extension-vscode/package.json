{
	"name": "extension-vscode",
	"version": "0.0.0",
	"displayName": "JS+",
	"description": "JS+ for VSCode",
	"icon": "./src/assets/icon.png",
	"engines": {
		"vscode": "^1.107.0"
	},
	"scripts": {
		"build": "pnpm exec vsce package -o ./dist"
	},
	"devDependencies": {
		"@vscode/vsce": "^3.7.1",
		"npm": "^11.7.0"
	},
	"repository": "https://github.com/t1xx1/jsp/packages/extension-vscode",
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "JS+",
				"aliases": [
					"JS+",
					"js+",
					"JSp",
					"jsp"
				],
				"extensions": [
					".jsp"
				],
				"icon": {
					"light": "./src/assets/miniature.png",
					"dark": "./src/assets/miniature.png"
				}
			}
		],
		"grammars": [
			{
				"language": "JS+",
				"scopeName": "source.jsp",
				"path": "./src/syntaxes/jsp.tmLanguage.json"
			},
			{
				"scopeName": "markdown.codeblock.jsp",
				"path": "./src/syntaxes/jsp.codeblock.md.json",
				"injectTo": [
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.jsp": "jsp"
				}
			}
		]
	}
}
