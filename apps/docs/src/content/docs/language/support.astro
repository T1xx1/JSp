---
import type { ProposalType, Support } from './types';

import Semaphore from './semaphore.svelte';

type Props = {
	frontmatter: {
		proposalType: ProposalType;
		support: Support;
	};
};

const { frontmatter } = Astro.props;
---

<table>
	<tbody>
		<tr>
			<th>Type</th>
			<th>TC39</th>
			<th>MDN</th>
			<th>CoreJS</th>
			<th>Babel</th>
			<th>Civet</th>
			<th>JS+</th>
		</tr>
		<tr>
			<td>{frontmatter.proposalType}</td>
			<td>
				<Semaphore entity={frontmatter.support.tc39} />
			</td>
			<td>
				{
					frontmatter.support.mdn?.value && frontmatter.support.mdn?.link && (
						<a href={frontmatter.support.mdn.link}>âœ…</a>
					)
				}
			</td>
			<td>
				<Semaphore entity={frontmatter.support.corejs} />
			</td>
			<td>
				<Semaphore entity={frontmatter.support.babel} />
			</td>
			<td>
				<Semaphore entity={frontmatter.support.civet} />
			</td>
			<td>
				<Semaphore entity={frontmatter.support.jsp} />
			</td>
		</tr>
	</tbody>
</table>
