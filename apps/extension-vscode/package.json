{
	"name": "extension-vscode",
	"displayName": "JS+",
	"version": "0.1.0",
	"description": "JS+ for VS Code",
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/t1xx1/jsp",
		"directory": "apps/extension-vscode"
	},
	"publisher": "jsplang",
	"files": [
		"assets",
		"dist",
		"syntaxes",
		"language-configuration.json",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"dev": "node esbuild.mjs --dev",
		"build": "pnpm bundle && pnpm package",
		"bundle": "node esbuild.mjs",
		"package": "vsce package --no-dependencies"
	},
	"devDependencies": {
		"@jsplang/jsp": "workspace:*",
		"@types/vscode": "^1.109.0",
		"@vscode/vsce": "^3.7.1",
		"esbuild": "^0.27.3",
		"typescript": "^5.9.3"
	},
	"contributes": {
		"languages": [
			{
				"id": "jsp",
				"aliases": [
					"JS+",
					"js+",
					"JSp",
					"jsp"
				],
				"extensions": [
					".jsp"
				],
				"icon": {
					"dark": "./assets/miniature.svg",
					"light": "./assets/miniature.svg"
				},
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "jsp",
				"scopeName": "source.jsp",
				"path": "./syntaxes/jsp.tmLanguage.json"
			},
			{
				"injectTo": [
					"text.html.markdown"
				],
				"scopeName": "markdown.codeblock.jsp",
				"path": "./syntaxes/jsp.codeblock.json",
				"embeddedLanguages": {
					"meta.embedded.block.jsp": "jsp"
				}
			}
		],
		"configurationDefaults": {
			"material-icon-theme.languages.customClones": [
				{
					"name": "JS+",
					"base": "javascript",
					"color": "#31C433",
					"ids": [
						"jsp"
					]
				}
			],
			"material-icon-theme.files.customClones": [
				{
					"name": "JS+ config",
					"base": "tsconfig",
					"color": "#31C433",
					"fileNames": [
						".config/jsp.ts",
						"jsp.config.ts"
					]
				}
			],
			"[jsp]": {
				"editor.detectIndentation": false,
				"editor.insertSpaces": false,
				"editor.formatOnSave": true,
				"prettier.printWidth": 100,
				"prettier.useTabs": true,
				"prettier.singleQuote": true
			}
		}
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"icon": "./assets/icon.png",
	"engines": {
		"vscode": "^1.109.0"
	}
}
