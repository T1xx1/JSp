{
	"name": "@jsplang/monorepo",
	"engines": {
		"node": ">=24"
	},
	"packageManager": "pnpm@10.29.3",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"format": "oxfmt",
		"format:check": "oxfmt --check",
		"docs:dev": "turbo dev --filter=@jsplang/docs...",
		"docs:build": "turbo build --filter=@jsplang/docs...",
		"extension-vscode:dev": "turbo dev --filter=extension-vscode... --filter=!@jsplang/tester",
		"extension-vscode:build": "turbo build --filter=extension-vscode... --filter=!@jsplang/tester",
		"jsp:dev": "turbo dev --filter=@jsplang/jsp... --filter=!@jsplang/tester",
		"jsp:build": "turbo build --filter=@jsplang/jsp... --filter=!@jsplang/tester",
		"jsp:test": "turbo test --filter=@jsplang/jsp..."
	},
	"devDependencies": {
		"oxfmt": "^0.34.0",
		"oxlint": "^1.49.0",
		"turbo": "^2.8.8"
	}
}
